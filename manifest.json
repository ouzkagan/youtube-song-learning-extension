{
  "name": "Youtube-song-learning",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "This is a simple looping extension for Youtube music learning and song memorizing.",
  "homepage_url": "https://github.com/ouzkagan/youtube-song-learning-extension",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "service_worker": "src/bg/background.js"
  },
  "options_page": "src/options/index.html",
  "action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Enable or disable extension.",
    "default_popup": "src/browser_action/popup.html"
  },
  "permissions": [
    "activeTab",
    "cookies"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "run_at": "document_end"

    },
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "run_at": "document_end",
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "host_permissions": [
    "https://*.youtube.com/*"
  ]
}